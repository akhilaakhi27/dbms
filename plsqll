create table emp5(empno int,empname varchar(20),deptno int);
insert into emp5 values(:empno,:empname,:deptno);
select* from emp5;
DECLARE 
VENO emp5.empno%type:=:empno;
VENAME emp5.empname%type;
VDEPTNO emp5.deptno%type;
BEGIN
SELECT EMPNO,EMPNAME,DEPTNO INTO VENO,VENAME,VDEPTNO FROM emp5 where empno=VENO;
DBMS_OUTPUT.PUT_LINE('DEPT NO. IS '||VDEPTNO);
DBMS_OUTPUT.PUT_LINE('EMPLOYEE NAME IS  '||VENAME);
EXCEPTION
WHEN NO_DATA_FOUND THEN
DBMS_OUTPUT.PUT_LINE('NO RECORD FOUND');
END;

DECLARE
A INT;
B INT;
C INT;
BEGIN
A:=:A;
B:=:B;
C:=A/B;
DBMS_OUTPUT.PUT_LINE('RESULT IS '||C);
EXCEPTION
WHEN ZERO_DIVIDE THEN
DBMS_OUTPUT.PUT_LINE('DIVISION BY O NOT POSSIBLE');
END;

CREATE TABLE FIXED(ACCNO NUMBER,YEARS NUMBER,AMOUNT NUMBER,INTEREST NUMBER);
INSERT INTO FIXED (ACCNO,YEARS,AMOUNT) VALUES (:ACCNO,:YEARS,:AMOUNT);
SELECT*FROM FIXED;

DECLARE
CURSOR CUR IS SELECT*FROM FIXED;
BEGIN
FOR I IN CUR 
LOOP
IF I.YEARS<=2 THEN
UPDATE FIXED SET INTEREST=I.AMOUNT*0.09*(1/12) WHERE ACCNO=I.ACCNO;
ELSIF 
I.YEARS>=2 AND I.YEARS<=5 THEN
UPDATE FIXED SET INTEREST=I.AMOUNT*0.11*(1/12) WHERE ACCNO=I.ACCNO;
ELSE
UPDATE FIXED SET INTEREST=I.AMOUNT*0.15*(1/12) WHERE ACCNO=I.ACCNO;
END IF;
END LOOP;
END;
